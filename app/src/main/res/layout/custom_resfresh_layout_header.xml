<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/custom_refresh_layout_header_indicator_color"
        app:trackColor="@color/custom_refresh_layout_header_track_color"
        app:indicatorSize="@dimen/custom_refresh_layout_header_indicator_size"
        app:trackThickness="@dimen/custom_refresh_layout_header_indicator_thickness"
        app:trackCornerRadius="@dimen/custom_refresh_layout_header_indicator_thickness"
        android:paddingTop="@dimen/custom_refresh_layout_header_padding_top"
        android:paddingBottom="@dimen/custom_refresh_layout_header_padding_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>